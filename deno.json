{
    "name": "@iherman/r2epub",
    "description": "Typescript based conversion of Respec generated HTML files into EPUB 3",
    "version": "2.0.0",
    "homepage": "https://github.com/w3c/yml2vocab",
    "nodeModulesDir": "none",
    "compilerOptions": {
        "lib": ["dom", "deno.ns"]
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/iherman/r2epub"
    },
    "tasks": {
        "test-document": "deno run -A src/r2epub.ts -t http://localhost:8001/LocalData/github/Tools/r2epub/test/spec/Overview.html",
        "test-2016": "deno run -A src/r2epub.ts -t http://localhost:8001/LocalData/github/Tools/r2epub/test/aria/Overview.html",
        "test-clreq": "deno run -A src/r2epub.ts -t http://localhost:8001/LocalData/github/Tools/r2epub/test/clreq/Overview.html",
        "test-book": "deno run -A src/r2epub.ts http://localhost:8001/LocalData/github/Tools/r2epub/docs/collections/epub_local.json",
        "test-respec": "deno run -A src/r2epub.ts -t -r https://w3c.github.io/epub-specs/epub33/overview/"
    },
    "exports": {
        ".":     "./src/index.ts",
        "./cli": "./src/r2epub.ts"
    },
    "author": "Ivan Herman <ivan@w3.org> (https://www.w3.org/People/Ivan/)",
    "license": "W3C-20150513",
    "exclude": ["dist/", "_config.yml"],
    "imports": {
        "jszip"                 : "npm:jszip@^3.10.1",
        "url"                   : "npm:url@^0.11.4",
        "valid-url"             : "npm:valid-url@^1.0.9",
        "w3c-xmlserializer"     : "npm:w3c-xmlserializer@^5.0.0",
        "xmlbuilder2"           : "npm:xmlbuilder2@^3.1.1",
        "commander"             : "npm:commander@^14.0.0",
        "@exodus/schemasafe"    : "npm:@exodus/schemasafe@^1.3.0",
        "jsdom"                 : "npm:jsdom@^26.0.0"
    }
}
