{
    "compilerOptions": {
        "allowJs": true,
        "alwaysStrict": true,
        "baseUrl": ".",
        "esModuleInterop": false,
        "lib": ["esnext", "dom"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmitHelpers": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": false,
        "outDir": "dist",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "resolveJsonModule": true,
        "sourceMap": true,
        "target": "esnext",
    },
    "typesRoots": [
        "./typings",
        "../node_modules/@types"
    ],
    "include": [
        "src/**/*",
        "tests/**/*"
    ],
    "exclude": [
        "dist/**/*"
    ],
    "typedocOptions" : {
        "entryPointStrategy": "expand",
        "excludeInternal": true,
        "excludeProtected": false,
        "excludePrivate": false,
        "out" : "docs/typedoc",
        "theme": "default",
        "includeVersion": true,
        "categorizeByGroup": true,
        "gitRemote": "origin",
        "hideGenerator": true,
        "name" : "r2epub â€” Converting HTML/ReSpec documents to EPUB 3.4"
    }
}
