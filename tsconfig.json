{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "ES2017",
        "lib": ["es7", "dom"],
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "typesRoots": [
        "./typings",
        "../node_modules/@types"
    ],
    "include": [
        "src/**/*",
        "tests/**/*"
    ],
    "exclude": [
        "dist/**/*"
    ],
    "typedocOptions" : {
        "out" : "docs",
        "disableOutputCheck": true,
        "hideGenerator": true,
        "listInvalidSymbolLinks": true,
        "ignoreCompilerErrors": true,
        "name" : "Converting HTML documents produced by Respec into EPUB 3.2"
    }
}
