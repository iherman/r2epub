{
    "compilerOptions": {
        "allowJs": true,
        "alwaysStrict": true,
        "baseUrl": ".",
        "esModuleInterop": false,
        "lib": ["ES2019", "dom"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmitHelpers": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": false,
        "outDir": "dist",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "resolveJsonModule": true,
        "sourceMap": true,
        "target": "ES2019",
    },
    "typesRoots": [
        "./typings",
        "../node_modules/@types"
    ],
    "include": [
        "src/**/*",
        "tests/**/*"
    ],
    "exclude": [
        "dist/**/*"
    ],
    "typedocOptions" : {
        "excludeExternals": true,
        "excludePrivate" : true,
        "excludeProtected" : false,
        "out" : "docs/typedoc",
        "theme": "default",
        "includeVersion": true,
        "categorizeByGroup": true,
        "gitRemote": "origin",
        "hideGenerator": true,
        "listInvalidSymbolLinks": true,
        "name" : "r2epub â€” Converting HTML/ReSpec documents to EPUB 3.3"
    }
}
